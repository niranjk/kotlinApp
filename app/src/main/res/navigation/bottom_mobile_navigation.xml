<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.niranjankhatri.kotlinapp.appnavigation.navigationdrawer.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_nav_home_to_nav_content"
            app:destination="@id/nav_content" />
    </fragment>
    <fragment
        android:id="@+id/nav_content"
        android:name="com.niranjankhatri.kotlinapp.appnavigation.navigationdrawer.ContentFragment"
        android:label="ContentFragment" />
    <fragment
        android:id="@+id/nav_cart"
        android:name="com.niranjankhatri.kotlinapp.appnavigation.bottomnavigation.CartFragment"
        android:label="CartFragment" />
    <fragment
        android:id="@+id/nav_offers"
        android:name="com.niranjankhatri.kotlinapp.appnavigation.bottomnavigation.OffersFragment"
        android:label="OffersFragment" />
    <fragment
        android:id="@+id/nav_rewards"
        android:name="com.niranjankhatri.kotlinapp.appnavigation.bottomnavigation.RewardsFragment"
        android:label="RewardsFragment" />
    <fragment
        android:id="@+id/nav_tickets"
        android:name="com.niranjankhatri.kotlinapp.appnavigation.bottomnavigation.TicketsFragment"
        android:label="TicketsFragment" />
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.niranjankhatri.kotlinapp.appnavigation.navigationdrawer.SettingsFragment"
        android:label="SettingsFragment" />

</navigation>